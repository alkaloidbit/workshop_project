{% extends 'base.html.twig' %}

{% block title %}Hello AdminAnswerController!{% endblock %}

{% block main %}
    <h1>{{ 'Liste de r√©ponses'|trans }}</h1>

    <table class="table table-striped table-middle-aligned table-borderless">
        <thead>
            <tr>
                <th scope="col">{{ 'Contenu'|trans }}</th>
                <th scope="col">{{ 'Question'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for answer in answers %}
            <tr>
                <td>{{ answer.content }}</td>
                <td>{{ answer.question }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'Aucune situation'|trans }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
