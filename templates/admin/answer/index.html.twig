{% extends 'base.html.twig' %}

{% block title %}Hello AdminAnswerController!{% endblock %}

{% block main %}
    <h1>{{ 'Liste des réponses'|trans }}</h1>

    <table class="table table-striped table-middle-aligned table-borderless">
        <thead>
            <tr>
                <th scope="col">{{ 'Contenu'|trans }}</th>
                <th scope="col">{{ 'Situation'|trans }}</th>
                <th scope="col">{{ 'Bonne Réponse ?'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for answer in answers %}
            <tr>
                {% if answer.getSituation() %}
                  <td>{{ answer.content }}</td>
                  <td>{{ answer.situation }}</td>
                  <td>{{ answer.valid }}</td>
                {% else %}
                  <td></td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'Aucune réponse'|trans }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_answer_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'Creer une nouvelle réponse'|trans }}
        </a>
    </div>
    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
