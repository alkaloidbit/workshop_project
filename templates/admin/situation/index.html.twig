{% extends 'admin/layout.html.twig' %}

{% block title %}Hello AdminSituationController!{% endblock %}

{% block main %}
    <h1>{{ 'Liste des situations'|trans }}</h1>

    <table class="table table-striped table-middle-aligned table-borderless">
        <thead>
            <tr>
                <th scope="col">{{ 'Question'|trans }}</th>
                <!-- <th scope="col">{{ 'Explication'|trans }}</th> -->
                <th scope="col">{{ 'image'|trans }}</th>
            </tr>
       </thead>
        <tbody>
        {% for situation in situations %}
            <tr>
                <td>{{ situation.question|u.truncate(30, '...') }}</td>
                <!-- <td>{{ situation.explanation|u.truncate(100, '...') }}</td> -->
                <td><img src="{{ asset('uploads/images/' ~ situation.imageName ) | imagine_filter('squared_thumbnail_small') }}"</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_situation_show', {id: situation.id}) }}" class="btn btn-sm btn-secondary">
                            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show'|trans }}
                        </a>

                        <a href="{{ path('admin_situation_edit', {id: situation.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'Aucune situation'|trans }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_situation_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'Creer une nouvelle situation'|trans }}
        </a>
    </div>
    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
