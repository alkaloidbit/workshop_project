{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_situation_edit' %}

{% block main %}
    <h1>{{ 'title.edit_situation'|trans({'id': situation.id}) }}</h1>

    {{ include('admin/situation/_form.html.twig', {
        form: form,
        button_label: 'action.save'|trans,
        include_back_to_home_link: true,
    }, with_context = false) }}
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('admin_situation_show', {id: situation.id}) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.situation_show'|trans }}
        </a>
    </div>

    <div class="section actions">
        {{ include('admin/situation/_delete_form.html.twig', {situation: situation}, with_context = false) }}
    </div>

    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}

