{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_situation_new' %}

{% block main %}
    <h1>{{ 'Nouvelle Situation'|trans }}</h1>
    {{ form_start(form) }}
        {{ form_row(form.explanation) }}
        {{ form_row(form.question) }}

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> {{ 'Save'|trans }}
        </button>
        {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}
        <a href="{{ path('admin_situation_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
        </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
		{{ parent() }}

		{{ show_source_code(_self) }}
{% endblock %}

